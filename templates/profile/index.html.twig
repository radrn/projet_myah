{% extends 'base.html.twig' %}

{% block title %}{{ user.username }}{% endblock %}


{% block body %}
    <div class="feed-container">
        <img src="{{ user.avatarPath }}"
             alt="{{ user.username }}"
             class="profile-picture">
        <h3>@{{ user.username }}</h3>
        <div class="profile-nav">
            <p>Posts</p>
            <p>Favoris</p>
        </div>
        <div>
            {% for post in posts %}
                <div class="card">
                    <div class="post-header">
                        <img src="{{ user.avatarPath }}" class="post-img">
                        <p>@{{ user.username }}</p>
                    </div>
                    <div class="post-contenu">
                        <p>{{ post.contenu }}</p>
                    </div>
                    <div class="post-footer">
                        <p>{{ post.createdAt|date('d/m/Y') }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
